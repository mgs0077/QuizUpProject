<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#0D400D"/> <!-- Color mÃ¡s oscuro para la sombra -->
        </shape>
    </item>

    <!-- Fondo principal -->
    <item android:top="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#4CAF50"/> <!-- Color verde principal -->
            <stroke android:width="3dp" android:color="#2E7D32"/> <!-- Borde oscuro -->
        </shape>
    </item>
</layer-list>
