<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/> <!-- Ajuste del radio para hacerlo más cuadrado -->
            <solid android:color="#5D0E0E"/> <!-- Color de la sombra más oscuro -->
        </shape>
    </item>

    <!-- Fondo principal -->
    <item android:top="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/> <!-- Bordes redondeados similares a la imagen -->
            <solid android:color="#A33D3D"/> <!-- Color de fondo más cercano al rojo -->
            <stroke android:width="3dp" android:color="#500808"/> <!-- Borde oscuro -->
        </shape>
    </item>
</layer-list>
